<%= form_with model: @event do |f| %>
    <div>
        <%= f.label :datetime, "Date and time" %> <br />
        <%= f.datetime_field :datetime %>
        <% @event.errors.full_messages_for(:datetime).each do |message| %>
        <p><i><%= message %></i></p>
        <% end %>
    </div>

    <div>
        <%= f.label :location %> <br />
        <%= f.text_field :location %>
        <% @event.errors.full_messages_for(:location).each do |message| %>
        <p><i><%= message %></i></p>
        <% end %>
    </div>

    <div>
        <%= f.label :title %> <br />
        <%= f.text_field :title %>
        <% @event.errors.full_messages_for(:title).each do |message| %>
        <p><i><%= message %></i></p>
        <% end %>
    </div>

    <div>
        <%= f.label :description %> <br />
        <%= f.text_area :description %>
        <% @event.errors.full_messages_for(:description).each do |message| %>
        <p><i><%= message %></i></p>
        <% end %>
    </div>

    <div>
        <%= f.submit %>
    </div>
<% end %>
